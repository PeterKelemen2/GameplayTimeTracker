        <PackageReference Include="Extended.Wpf.Toolkit" Version="4.6.1"/>
        <PackageReference Include="WindowsShortcutFactory" Version="1.2.0"/>
        <PackageReference Include="MonoMac.NetStandard" Version="0.0.4" ExcludeAssets="runtime" />
        <PackageReference Include="AtkSharp" Version="3.24.24.95" ExcludeAssets="runtime" />
        <PackageReference Include="CairoSharp" Version="3.24.24.95" ExcludeAssets="runtime" />
